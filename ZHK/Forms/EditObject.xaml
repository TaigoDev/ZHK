<Page x:Class="ZHK.Forms.EditObject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZHK.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditObject">

    <UniformGrid VerticalAlignment="Center" Columns="3">
        <Border Style="{StaticResource EditObjectButtonBorder}">
            <Button Style="{StaticResource EditObjectButton}">Добавить</Button>
        </Border>
        <Border Style="{StaticResource EditObjectButtonBorder}">
            <Button Style="{StaticResource EditObjectButton}">Редактировать</Button>
        </Border>
        <Border Style="{StaticResource EditObjectButtonBorder}">
            <Button Style="{StaticResource EditObjectButton}">Удалить</Button>
        </Border>
    </UniformGrid>
</Page>
